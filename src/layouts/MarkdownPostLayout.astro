---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <main class="p-4">

    <h1 class="">{frontmatter.title}</h1>

    <p class="text-gray-600">{frontmatter.pubDate.toString().slice(0,10)}</p>
    
    <p class="italic">{frontmatter.description}</p>

    <p class="font-semibold">Written by: {frontmatter.author}</p>

    <img src={frontmatter.image.url} alt={frontmatter.image.alt} class="w-72 mx-auto my-4" />

    <slot />

  </main>
</BaseLayout>
